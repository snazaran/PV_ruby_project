<!-- Validation failure messages -->

<% if @account.errors.any? %>
  <% @account.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Account #<%= @account.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_account/<%= @account.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for firm_name -->
          <div class="form-group">
            <label for="firm_name" class="col-sm-2 control-label">
              Firm name
            </label>
            <div class="col-sm-10">
              <input type="text" id="firm_name" name="firm_name" placeholder="Firm name" class="form-control" value="<%= @account.firm_name %>">
            </div>
          </div>

          <!-- Label and input for city -->
          <div class="form-group">
            <label for="city" class="col-sm-2 control-label">
              City
            </label>
            <div class="col-sm-10">
              <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @account.city %>">
            </div>
          </div>

          <!-- Label and input for monthly_rate -->
          <div class="form-group">
            <label for="monthly_rate" class="col-sm-2 control-label">
              Monthly rate
            </label>
            <div class="col-sm-10">
              <input type="text" id="monthly_rate" name="monthly_rate" placeholder="Monthly rate" class="form-control" value="<%= @account.monthly_rate %>">
            </div>
          </div>

          <!-- Label and input for salesperson_id -->
          <div class="form-group">
            <label for="salesperson_id" class="col-sm-2 control-label">
              Salesperson
            </label>
            <div class="col-sm-10">
            <%= select_tag :salesperson_id, options_from_collection_for_select( Salesperson.order("last_name ASC"), :id, :first_name, @account.salesperson_id )%>
          <!--     <input type="text" id="salesperson_id" name="salesperson_id" placeholder="Salesperson" class="form-control" value="<%= @account.salesperson_id %>"> -->
            </div>
          </div>

                    <!-- Label and input for cap nick -->
          <div class="form-group">
            <label for="cap_nick" class="col-sm-2 control-label">
              Nickname in Capture table
            </label>
            <div class="col-sm-10">
            <input type="text" id="cap_nick" name="cap_nick" placeholder="capture table nick" class="form-control" value="<%= @account.cap_nick %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Account
              </button>
              or
              <a href="/accounts/<%= @account.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
