<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Account #<%= @account.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Firm name</dt>
              <dd><%= @account.firm_name %></dd>

              <dt>City</dt>
              <dd><%= @account.city %></dd>

              <dt>Monthly rate</dt>
              <dd><%= @account.monthly_rate %></dd>

              <dt>Salesperson</dt>
              <dd><%= @account.salesperson.first_name %></dd>

              <dt>Outstanding Balance</dt>
              <dd><%= @balance %></dd>

              <dt>Instances</dt>
              <% @account.instances.each do |instance| %>
              <dd><%= instance.login %></dd>
              <% end %>

              <dt>Cap Nick</dt>
              <dd><%= @account.cap_nick %></dd>

              <dt>Captures</dt>
              <% c=@captures.where({:firm_name => @account.cap_nick }) %>
              <% capnum = 0 %>
              <% c.each do |cap| %>
              <% capnum = capnum + cap.captures %>

              <%  end %>
              <dd><%= capnum %></dd>

              <dt>Tiles</dt>
              <dd><% c=@captures.where({:firm_name => @account.cap_nick,}) %></dd>
              <% tilenum = 0 %>
              <% c.each do |cap| %>
              <% tilenum = tilenum + cap.tiles %>

              <%  end %>
              <%= tilenum %>



            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/accounts" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/accounts/<%= @account.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_account/<%= @account.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
