<!-- Validation failure messages -->

<% if @capture.errors.any? %>
  <% @capture.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Capture #<%= @capture.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_capture/<%= @capture.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for year -->
          <div class="form-group">
            <label for="year" class="col-sm-2 control-label">
              Year
            </label>
            <div class="col-sm-10">
              <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @capture.year %>">
            </div>
          </div>

          <!-- Label and input for month -->
          <div class="form-group">
            <label for="month" class="col-sm-2 control-label">
              Month
            </label>
            <div class="col-sm-10">
              <input type="text" id="month" name="month" placeholder="Month" class="form-control" value="<%= @capture.month %>">
            </div>
          </div>

          <!-- Label and input for firm_name -->
          <div class="form-group">
            <label for="firm_name" class="col-sm-2 control-label">
              Firm name
            </label>
            <div class="col-sm-10">
              <input type="text" id="firm_name" name="firm_name" placeholder="Firm name" class="form-control" value="<%= @capture.firm_name %>">
            </div>
          </div>

          <!-- Label and input for captures -->
          <div class="form-group">
            <label for="captures" class="col-sm-2 control-label">
              Captures
            </label>
            <div class="col-sm-10">
              <input type="text" id="captures" name="captures" placeholder="Captures" class="form-control" value="<%= @capture.captures %>">
            </div>
          </div>

          <!-- Label and input for tiles -->
          <div class="form-group">
            <label for="tiles" class="col-sm-2 control-label">
              Tiles
            </label>
            <div class="col-sm-10">
              <input type="text" id="tiles" name="tiles" placeholder="Tiles" class="form-control" value="<%= @capture.tiles %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Capture
              </button>
              or
              <a href="/captures/<%= @capture.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
