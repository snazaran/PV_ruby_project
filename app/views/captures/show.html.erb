<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Capture #<%= @capture.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Year</dt>
              <dd><%= @capture.year %></dd>

              <dt>Month</dt>
              <dd><%= @capture.month %></dd>

              <dt>Firm name</dt>
              <dd><%= @capture.firm_name %></dd>

              <dt>Captures</dt>
              <dd><%= @capture.captures %></dd>

              <dt>Tiles</dt>
              <dd><%= @capture.tiles %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/captures" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/captures/<%= @capture.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_capture/<%= @capture.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
