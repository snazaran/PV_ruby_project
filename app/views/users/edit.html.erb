<!-- Validation failure messages -->

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit User #<%= @user.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_user/<%= @user.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for login -->
          <div class="form-group">
            <label for="login" class="col-sm-2 control-label">
              Login
            </label>
            <div class="col-sm-10">
              <textarea id="login" name="login" placeholder="Login" class="form-control" rows="3"><%= @user.login %></textarea>
            </div>
          </div>

          <!-- Label and input for password -->
          <div class="form-group">
            <label for="password" class="col-sm-2 control-label">
              Password
            </label>
            <div class="col-sm-10">
              <textarea id="password" name="password" placeholder="Password" class="form-control" rows="3"><%= @user.password %></textarea>
            </div>
          </div>

          <!-- Label and input for account_id -->
          <div class="form-group">
            <label for="account_id" class="col-sm-2 control-label">
              Account
            </label>
            <div class="col-sm-10">
              <input type="text" id="account_id" name="account_id" placeholder="Account" class="form-control" value="<%= @user.account_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update User
              </button>
              or
              <a href="/users/<%= @user.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
